<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_main_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.orlinskas.customviewtask.customView.AirTravelView
            android:id="@+id/activity_main_custom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="10dp"
            android:background="@drawable/custom_view_background"
            android:onClick="onClick"
            app:cityCodeFrom="KHA"
            app:cityCodeFromBot="KHA"
            app:cityCodeTo="VLN"
            app:cityCodeToBot="RIG"
            app:cityNameFrom="Kharkov"
            app:cityNameFromBot="Kharkov"
            app:cityNameTo="Vilnius"
            app:cityNameToBot="Vilnius"
            app:companyImage="@drawable/company_logo2"
            app:companyImageBot="@drawable/company_logo"
            app:dateFrom="5 august"
            app:dateFromBot="5 august"
            app:dateTo="5 august"
            app:dateToBot="5 august"
            app:firstAirport="Центральный аэропорт Харькова"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:raceID="M123412o"
            app:raceIDBot="M123412o"
            app:secondAirport="Не центральный аэропорт Харькова"
            app:timeFrom="18:00"
            app:timeFromBot="20:00"
            app:timeInFly="2 hour 10 minutes"
            app:timeInFlyBot="1 hour 30 minutes"
            app:timeTo="18:30"
            app:timeToBot="18:30" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

